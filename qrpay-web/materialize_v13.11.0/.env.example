# Materialize v13.11.0 Environment Configuration
# Copy this file to .env and update with your actual values

# Application
NODE_ENV=development
NEXT_PUBLIC_APP_NAME=QRPay Admin
NEXT_PUBLIC_APP_VERSION=13.11.0

# API Configuration
NEXT_PUBLIC_API_URL=https://www.chibank.eu/api
NEXT_PUBLIC_API_TIMEOUT=30000

# Authentication (Server-side only - do not expose to client)
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRY=86400

# QRPay Backend Integration
NEXT_PUBLIC_QRPAY_API_URL=https://www.chibank.eu/api
NEXT_PUBLIC_QRPAY_CALLBACK_URL=https://www.chibank.eu/api/callback

# Database (if needed for direct connection)
# DATABASE_URL=mysql://username:password@localhost:3306/chibank

# OAuth/Social Login (if applicable)
# NEXT_PUBLIC_GOOGLE_CLIENT_ID=
# NEXT_PUBLIC_FACEBOOK_APP_ID=

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_DEBUG=false

# UI Configuration
NEXT_PUBLIC_DEFAULT_THEME=light
NEXT_PUBLIC_DEFAULT_LANGUAGE=zh-CN

# Payment Gateway Settings (if needed)
# NEXT_PUBLIC_STRIPE_PUBLIC_KEY=
# NEXT_PUBLIC_PAYPAL_CLIENT_ID=

# Monitoring & Logging
# NEXT_PUBLIC_SENTRY_DSN=
# NEXT_PUBLIC_GA_TRACKING_ID=

# CORS
NEXT_PUBLIC_CORS_ENABLED=true
NEXT_PUBLIC_ALLOWED_ORIGINS=https://www.chibank.eu

# Session
SESSION_SECRET=your-session-secret-here
SESSION_MAX_AGE=86400

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Email Configuration (if needed)
# SMTP_HOST=
# SMTP_PORT=
# SMTP_USER=
# SMTP_PASS=
# SMTP_FROM=

# Redis (for session/cache if needed)
# REDIS_URL=redis://localhost:6379

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100
